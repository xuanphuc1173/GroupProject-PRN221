@page
@model AppleStore.Pages.Carts.EditModel

@{
    ViewData["Title"] = "Edit Cart Item";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit Cart Item</h1>

@if (Model.CartItem != null)
{
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CartItem.CartItemId" />

        <div class="form-group">
            <label asp-for="CartItem.Product.ProductName" class="control-label"></label>
            <select asp-for="CartItem.ProductId" class="form-control" asp-items="Model.Products" ></select>
            <span asp-validation-for="CartItem.ProductId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CartItem.Quantity" class="control-label"></label>
            <input asp-for="CartItem.Quantity" class="form-control" />
            <span asp-validation-for="CartItem.Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" value="@Model.Price" readonly/>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
}
else
{
    <p>Cart item not found.</p>
}

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
